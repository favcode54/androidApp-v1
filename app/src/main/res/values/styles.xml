<resources>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorForeground">@color/foreground_material_light</item>
        <item name="android:textColorPrimary">@color/cardview_light_background</item>
        <item name="android:colorBackground">@color/background_material_light</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>

    </style>

    <style name="Base.AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!--<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <!-- Transparent Navigation Bar -->
        <!--<item name="android:windowTranslucentNavigation" tools:targetApi="19">true</item>-->
    </style>


    <!-- Custom widget styles -->
    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?android:textColorPrimary</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabBackground">@color/colorPrimary</item>
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFAB91</item>
    </style>

    <style name="AppTheme.Toolba" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorForeground">@color/foreground_material_light</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:colorBackground">@color/bg</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>

    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_out_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_in_right</item>
    </style>

    <style name="white" parent="AppTheme">
        <item name="android:textColorPrimary">@color/text_color</item>
    </style>

    <style name="Home" parent="Theme.AppCompat.Light">
        <item name="android:colorBackground">@color/bg</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LightHighlightColorTheme">
        <item name="colorControlHighlight">@color/light_ripple_color</item>
    </style>

    <style name="LighterHighlightColorTheme">
        <item name="colorControlHighlight">@color/lighter_ripple_color</item>
    </style>


</resources>
