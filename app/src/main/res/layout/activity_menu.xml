<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rootView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#ffffff"
        android:id="@+id/frameLayout2">

        <org.favcode54.views.CircularImageView
            android:id="@+id/imageButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_img"/>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView12"
            android:layout_centerHorizontal="true"
            android:text="Silicon Valley, CA"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageButton"
            android:layout_alignStart="@+id/imageButton"
            android:layout_below="@+id/imageButton"
            android:text="Favour Ori"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="10dp"
            android:background="?attr/selectableItemBackground"
            android:padding="5dp"
            android:tint="@color/colorPrimaryDark"
            app:srcCompat="@drawable/ic_delete"/>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/frameLayout2"
        android:background="@color/trans_grey1"
        android:id="@+id/frameLayout3">

    </FrameLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frameLayout3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:background="?attr/selectableItemBackground"
        android:drawableLeft="@drawable/ic_cloud"
        android:gravity="center_vertical|start"
        android:paddingLeft="10dp"
        android:text="             Portal"
        android:textColor="@color/lighter_ripple_color"/>

    <Button
        android:id="@+id/button6"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button"
        android:layout_below="@+id/button"
        android:background="?attr/selectableItemBackground"
        android:drawableLeft="@drawable/ic_notify"
        android:gravity="center_vertical|start"
        android:paddingLeft="10dp"
        android:text="             Notification"
        android:textColor="@color/lighter_ripple_color"/>

    <Button
        android:id="@+id/button7"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:layout_below="@+id/button6"
        android:background="?attr/selectableItemBackground"
        android:drawableLeft="@drawable/ic_help"
        android:gravity="center_vertical|start"
        android:paddingLeft="10dp"
        android:text="             Help"
        android:textColor="@color/lighter_ripple_color"/>

    <Button
        android:id="@+id/button8"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button7"
        android:layout_below="@+id/button7"
        android:background="?attr/selectableItemBackground"
        android:drawableLeft="@drawable/ic_feedback"
        android:gravity="center_vertical|start"
        android:paddingLeft="10dp"
        android:text="             Feedback"
        android:textColor="@color/lighter_ripple_color"
        android:layout_alignLeft="@+id/button7"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button8"
        >

        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_above="@+id/frameLayout4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/trans_grey1">

        </FrameLayout>

        <LinearLayout
            android:id="@+id/frameLayout4"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentBottom="true"
            android:background="@color/colorAccent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/button11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:src="@drawable/ic_abt"
                android:text="Button"
                android:tint="@color/lighter_ripple_color"/>

            <FrameLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_above="@+id/frameLayout4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/trans_grey1">

            </FrameLayout>

            <ImageButton
                android:id="@+id/button10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:src="@drawable/ic_log_out"
                android:text="Button"
                android:tint="@color/lighter_ripple_color"/>

        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>